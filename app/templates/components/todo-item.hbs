{{#if editing}}
    {{input class="edit" value=todo.title enter="submitTodo"}}
{{else}}
  <input type="checkbox" class="toggle" {{action 'toggleCompleted' todo}}>
  <label class="{{if todo.isCompleted 'completed'}}" {{action "editTodo" on="doubleClick"}}>
    {{todo.title}}
  </label>
  <button class="destroy" {{action 'removeItem' todo}}></button>
{{/if}}
